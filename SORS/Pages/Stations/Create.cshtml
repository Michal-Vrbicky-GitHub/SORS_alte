@page
@model SORS.Pages.Stations.CreateModel

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Station</h4>
<hr />
<form method="post">
   <div class="row">
		<div class="col-md-6">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Station.Name" class="control-label"></label>
				<input asp-for="Station.Name" class="form-control" />
				<span asp-validation-for="Station.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Station.LvlMin" class="control-label"></label>
				<input asp-for="Station.LvlMin" class="form-control" />
				<span asp-validation-for="Station.LvlMin" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Station.LvlMax" class="control-label"></label>
				<input asp-for="Station.LvlMax" class="form-control" />
				<span asp-validation-for="Station.LvlMax" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Station.AlertDelay" class="control-label"></label>
				<input asp-for="Station.AlertDelay" class="form-control" />
				<span asp-validation-for="Station.AlertDelay" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</div>
		<div class="col-md-6">
			<h4>Add Alert Emails</h4>
			<div id="alertEmailContainer">
			<div class="form-group">
					<input type="text" class="form-control alert-email" name="alertEmail" placeholder="Enter alert email" />
					<!--<span asp-validation-for="Alert.e" class="text-danger"></span>-->
			</div>
		 </div>
		</div>
	</form>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	<script>
		document.addEventListener("DOMContentLoaded", function () {
			let container = document.getElementById("alertEmailContainer");

			container.addEventListener("input", function (e) {
				if (e.target.classList.contains("alert-email") && e.target === container.lastElementChild.firstElementChild) {
					let newInputDiv = document.createElement("div");
					newInputDiv.classList.add("form-group");
					let newInput = document.createElement("input");
					newInput.type = "text";
					newInput.className = "form-control alert-email";
					newInput.name = "alertEmail";
					newInput.placeholder = "Enter alert email";
					newInputDiv.appendChild(newInput);
					let newSpan = document.createElement("span");
					newSpan.className = "text-danger";
					newSpan.setAttribute("data-valmsg-for", "alertEmail");
					newInputDiv.appendChild(newSpan);
					container.appendChild(newInputDiv);
				}
			});
		});
	</script>
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
